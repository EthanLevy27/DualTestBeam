<define>



    
 
<!-- constants for dual readout crystal calorimeter -->
    <constant name="DRcrystalwidth" value="1.0*cm"/>  <!-- should be 1 -->
    <constant name="DRcrystallength" value="400.0*cm"/>  <!-- should be 20 normally, 400 for 20 interacion length test-->
    <constant name="DRcrystalNsize" value="45"/>    <!-- should be 45 -->

<!-- gap between ecal and hcal  -->
    <constant name="EcalHcalgap" value="1*cm"/> <!-- should be small 0.1 mm -->



<!-- constants for dual readout spagetti fiber hcal calorimeter in SCEPCAL -->
<!-- these are radii -->
    <constant name="DRFiberAbswidthSCE" value="1.5*mm"/>  <!-- should be 1.5 mm -->
    <constant name="DRFiberFibwidthSCE" value=".5*mm"/>  <!-- should be 0.5 mm -->
    <constant name="DRFiberlengthSCE" value="130*cm"/>   <!-- should be 130 cm -->
    <constant name="DRFiberNsizeSCE" value="136"/>        <!-- should be 136 -->


<!-- constants for dual readout spagetti fiber hcal calorimeter in IDEA -->
    <constant name="DRFiberAbswidthIDEA" value="1.0*mm"/>  <!-- should be 1.0 mm -->
    <constant name="DRFiberFibwidthIDEA" value="0.5*mm"/>  <!-- should be 0.5 mm -->
    <constant name="DRFiberlengthIDEA" value="200*cm"/>   <!-- should be 130 cm -->
    <constant name="DRFiberNsizeIDEA" value="150"/>        <!-- should be 150 -->



<!-- constants for dual readout sampling hcal calorimeter -->
    <constant name="DRSampAthick" value="5.*mm"/> 
    <constant name="DRSampSthick" value="5.*mm"/> 
    <constant name="DRSampQthick" value="5.*mm"/> 
    <constant name="DRSampxy" value="20.*mm"/> 
    <constant name="DRSampNsize" value="5"/>        
    <constant name="DRSampNlayer" value="20"/>

<!-- detector numbering scheme -->
    
    <constant name="Ecal_ID" value="5"/>
    <constant name="Hcal_ID" value="6"/>
    <constant name="EdgeDet_ID" value="4"/>


    <constant name="killthick" value="0.2"/>
    <constant name="edgeoffset" value="50*cm"/>


  <constant name="world_side" value="DRcrystallength+2*DRFiberlengthIDEA+EcalHcalgap+edgeoffset+10."/>
    <constant name="world_x" value="world_side/1.5"/>  <!-- should be /4 -->
    <constant name="world_y" value="world_side/1.5"/>  <!-- should be /4 -->
    <constant name="world_z" value="world_side"/>

    

</define>

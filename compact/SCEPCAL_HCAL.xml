<!-- ====================================================================== -->
<!--                                                                        -->
<!--    XML description of the complete SiD tracker detector                -->
<!--    of the SiD linear collider detector design.                         -->
<!--                                                                        -->
<!--    Contained are the required                                          -->
<!--      ++ global constants used uniquely by this module                  -->
<!--      ++ visualization attributes                                       -->
<!--      ++ the definition of the readout structure and the                -->
<!--         readout segmentation (if necessary)                            -->
<!--      ++ the include statements for the sensitive detectors and         -->
<!--         the corresponding support structure(s)                         -->
<!--                                                                        -->
<!--                                                                        -->
<!--   @author  M.Frank                                                     -->
<!--   @date    14/11/2014                                                  -->
<!--                                                                        -->
<!-- ====================================================================== -->

<lccdd>


  <display>


    <vis name="AbsVis" alpha="0.1" r="0.0" g="1.0" b="0.0" showDaughters="true" visible="true"/>
    <vis name="CerenVis" alpha="0.1" r="0.3" g="0.6" b="0.9" showDaughters="true" visible="true"/>
    <vis name="ScintVis" alpha="0.5" r="1.0" g="0.0" b="0.0" showDaughters="true" visible="true"/>
    <vis name="phdetVis" alpha="1.0" r="0.0" g="0.0" b="1.0" showDaughters="true" visible="true"/>
    <vis name="towerVis" alpha="0.1" r="0.3" g="0.3" b="0.3" showDaughters="true" visible="true"/>

  </display>

  <readouts>

    <readout name="DRFNoSegment">
      <segmentation type="NoSegmentation"/>
      <id>system:3,ix:-5,iy:-5,fiber:2,abs:2,phdet:2</id>
    </readout>
  </readouts>

 <regions>
    <region name="FastSimOpFiberRegion"/>
  </regions> 


<!-- <include ref="SCEPCAL_DRcal.xml"/> -->
<include ref="SCEPCAL_DRFiber.xml"/>

</lccdd>


